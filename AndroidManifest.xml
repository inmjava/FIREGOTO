<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.astronomoamador.firgoto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConfiguraBluetoothActivity"
            android:label="@string/title_activity_configura_bluetooth" >
        </activity>
        <activity
            android:name=".StatusActivity"
            android:label="@string/title_activity_status" >
        </activity>
        <activity
            android:name=".MostrarControleActivity"
            android:label="@string/title_activity_mostrar_controle" >
        </activity>
        <activity
            android:name=".GotoSyncActivity"
            android:label="@string/title_activity_goto_sync" >
        </activity>
    </application>

</manifest>
